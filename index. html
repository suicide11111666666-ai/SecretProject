<script>
const questions = [
  "Aku mau tau dulu, kamu lagi santai ga sekarang?",
  "Aku udah mikir lama, dan aku ingin jujur...",
  "Aku suka sama kamu ‚ù§Ô∏è",
  "Mau ga kamu jadi pacar aku?"
];

let current = 0;

function showQuestion() {
  const container = document.getElementById('questionContainer');
  container.innerHTML = "";

  const p = document.createElement('p');
  p.textContent = questions[current];
  container.appendChild(p);

  const yesBtn = document.createElement('button');
  yesBtn.textContent = "Iya";
  yesBtn.onclick = () => nextQuestion("Iya");
  container.appendChild(yesBtn);

  const noBtn = document.createElement('button');
  noBtn.textContent = "Engga";
  noBtn.style.background = "#aaa";
  noBtn.style.marginLeft = "10px";
  noBtn.onclick = () => nextQuestion("Engga");
  container.appendChild(noBtn);
}

function nextQuestion(answer) {
  if (current < questions.length - 1) {
    current++;
    showQuestion();
  } else {
    // akhir confess
    const container = document.getElementById('questionContainer');
    container.innerHTML = "";
    const p = document.createElement('p');
    if (answer === "Iya") {
      p.textContent = "Yay! Makasih ‚ù§Ô∏è Aku seneng banget!";
    } else {
      p.textContent = "Gapapa‚Ä¶ makasih udah jujur üòä";
    }
    container.appendChild(p);
  }
}

// mulai pertanyaan pertama
showQuestion();
</script>

</body>
